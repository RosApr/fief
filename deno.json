{
  "enable": true,
  "tasks": {
    "dev": "MODE=development deno run -A --watch server.ts",
    "start:prod": "MODE=production deno run -A server.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@1",
    "react": "npm:react@^19.0.0",
    "fre": "npm:fre@2.8.6-fix3",
    "react-dom": "npm:react-dom@^19.0.0",
    "@types/react": "npm:@types/react@^19.0.1"
  },
  "workspace": [
    "./lib/"
  ],
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  }
}